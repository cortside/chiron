@model Chiron.Auth.Models.LoginModel
<div class="full-page-flex">
    <div id="branding-container">

    </div>

    <div id="login-panel">

        <div id="login-header">
            <a href="/">
                <div class="logo-image"></div>
            </a>
        </div>

        <p>
            Sign in with your hiring manager or recruiter account.
        </p>

        @Html.Partial("_ValidationSummary")

        <div id="login-form-wrapper">
            <form asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                </div>
                <div class="form-group">
                    <label class="form-check-label">
                        <input asp-for="RememberLogin" class="form-check-input"> Remember me
                    </label>
                </div>

                <div class="form-button-group">
                    <button class="btn btn-primary">Sign In</button>
                </div>
                @Html.AntiForgeryToken()
            </form>

            <div id="login-help-links">
                <div><a href="javascript:void(0)">Can't access your account?</a></div>
                <div><a href="javascript:void(0)">Create hiring manager account</a></div>
                <div><a href="javascript:void(0)">Create recruiter account</a></div>
            </div>
        </div>

    </div>
</div>
